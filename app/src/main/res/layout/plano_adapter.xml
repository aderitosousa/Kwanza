<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:elevation="5dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/Nome_Conta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginVertical="8dp"
                android:text="Nome da conta"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/Nome_conta1"
                app:layout_constraintTop_toBottomOf="@+id/Categoria" />

            <TextView
                android:id="@+id/Nome_conta1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conta :"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/Nome_Conta"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/Nome_Conta" />

            <TextView
                android:id="@+id/Nome_transacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="8dp"
                android:text="Paderia"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/Nome_transação1"
                app:layout_constraintStart_toEndOf="@+id/Nome_transação1"
                app:layout_constraintTop_toTopOf="@+id/Nome_transação1" />

            <TextView
                android:id="@+id/Nome_transação1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="Nome de transação :"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Nome_Conta" />

            <ImageButton
                android:id="@+id/remove"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/vermelha_200_escuro"
                android:src="@drawable/ic_baseline_remove_circle_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/done"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/roxo_escuro"
                android:src="@drawable/ic_baseline_done_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/valor_transacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="8dp"
                android:text="R$:0,00"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/valor_Transação1"
                app:layout_constraintStart_toEndOf="@+id/valor_Transação1"
                app:layout_constraintTop_toBottomOf="@+id/Nome_transação1" />

            <TextView
                android:id="@+id/valor_Transação1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="Valor da transação"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Nome_transação1" />

            <TextView
                android:id="@+id/Data_transacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="DD/MM/AA"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/Data_transação1"
                app:layout_constraintStart_toEndOf="@+id/Data_transação1"
                app:layout_constraintTop_toTopOf="@+id/Data_transação1" />

            <TextView
                android:id="@+id/Data_transação1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="Data"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/valor_Transação1" />

            <TextView
                android:id="@+id/Categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categotia"
                android:textSize="16sp"
                android:textColor="@color/Color_defaul"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.465"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>